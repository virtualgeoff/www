#VRML V2.0 utf8

WorldInfo {
   title        "A Simple Rocket"
   info     "By Geoff Pack, June 1997"
}

NavigationInfo {
   headlight    TRUE
   type     "EXAMINE"   #WALK, FLY, EXAMINE, NONE
   avatarSize   1.8
}

Viewpoint {
   description  "Beside Rocket"
   position     0 5 30
   jump     TRUE
}

Viewpoint {
   description "Above Rocket"
   position     -1 20 4
   orientation  -1 0 0 1.5708
   fieldOfView  1.5708
   jump     TRUE
}

Viewpoint {
   description "Along Rocket"
   position     .3 0 5
   orientation  1 0 0 .7854
   fieldOfView  1.5708
   jump     TRUE
}

# Origin of rocket is bottom centre of nozzle
# Total height: 15m
# Nozzle:

Transform {
   translation      0 1 0
   children [
    Shape {
       appearance Appearance {
          material Material {
           diffuseColor .2 .2 .2    # dark grey
           shininess    0
        }
       }
       geometry Cone {
        bottomRadius    .5
        height      2
        side            TRUE
        bottom      TRUE
       }
    }
   ]
}

# Main Body:

Transform {
   translation      0 7 0
   children [
    Shape {
       appearance Appearance {
          material Material {
           diffuseColor 1 1 1
           shininess    .5
        }
       }
       geometry Cylinder {
        radius  1
        height  12
        top     FALSE
        side        TRUE
        bottom  TRUE
       }
    }
   ]
}

# Nosecone:

Transform {
   translation      0 14 0
   children [
    Shape {
       appearance Appearance {
          material Material {
           diffuseColor 1 1 1
           shininess    .5
        }
       }
       geometry Cone {
        bottomRadius    1
        height      2
        side            TRUE
        bottom      FALSE
       }
    }
   ]
}

# Fins:

Transform {
   translation      0 0 0
   children [
    DEF Fin Shape {
       appearance Appearance {
          material Material {
           diffuseColor 1 1 1
           shininess    .5
        }
       }
       geometry IndexedFaceSet {
        coord Coordinate {
           point    [ 1 1 0, 2 0 0, 2 1.5 0, 1 3.5 0  ]
        }
        coordIndex  [0, 1, 2, 3, -1 ]
        solid       FALSE
       }
    }
    Transform {
        children    USE Fin
        rotation    0 1 0 1.5708
    }
    Transform {
        children    USE Fin
        rotation    0 1 0 3.1416
    }
    Transform {
        children    USE Fin
        rotation    0 1 0 4.7124
    }
   ]
}


