#VRML V2.0 utf8

WorldInfo {
   title    "Lattice of Spheres"
   info   "Geoff Pack, 1997"
}

NavigationInfo {
   headlight  TRUE
   type   "EXAMINE" #WALK, FLY, EXAMINE, NONE
}

Viewpoint {
   description "Entry"
   position 0 0 10
}

        Transform {
          translation   -3 0 0
          children [
            Shape {
              appearance Appearance {
                material Material {
                  diffuseColor  0 0 .9
                  shininess .5
                }
              }
              geometry Sphere {
                radius  1
              }
            }
          ]
        }


